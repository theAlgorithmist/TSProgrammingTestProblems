{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "removeComments": false,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "noExternalResolve": false,
    "sortOutput": true,
    "lib": ["ES6", "DOM"],
    "typeRoots": [
      "/node_modules/@types"
    ]
  },
  "exclude": [
    "node_packages"
  ]
}
